# Ambiente
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Banco de dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fulcrum?schema=public"

# Autenticação
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=1d

# CORS
CORS_ORIGIN=http://localhost:3001

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/application.log

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutos em milissegundos
RATE_LIMIT_MAX=100        # Máximo de requisições por janela

# Métricas
METRICS_PATH=/metrics
METRICS_PORT=9090

# Documentação
SWAGGER_PATH=/docs
SWAGGER_TITLE="Fulcrum API"
SWAGGER_DESCRIPTION="API da Plataforma de Compras Empresarial"
SWAGGER_VERSION="1.0"

# Health Checks
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DISK_THRESHOLD=0.9    # 90% de uso do disco
HEALTH_CHECK_MEMORY_HEAP=200       # 200MB de heap
HEALTH_CHECK_MEMORY_RSS=3000       # 3GB de RSS
