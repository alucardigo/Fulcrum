# Variáveis de Ambiente para a API (apps/api)

# Banco de Dados (substitua com suas credenciais reais no .env)
DATABASE_URL="mysql://root:password@localhost:3306/mydatabase"

# Segredo JWT (substitua por uma string longa e aleatória no .env)
JWT_SECRET="your-very-strong-and-long-jwt-secret"
JWT_EXPIRES_IN=3600s

# Porta da API
API_PORT=3001

# URL da Aplicação (usado em alguns contextos, como emails)
# APP_URL=http://localhost:3000 # (Frontend URL)

# Outras configurações
# NODE_ENV=development

SALT_ROUNDS=10
